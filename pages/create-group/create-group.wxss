.fixed-header {
    position: fixed;
    top: 0;
    width: 100%;
    background-color: #fff;
    z-index: 1000;
    padding: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    height: 40px;
}

.selected-friends {
    display: flex;
    flex-wrap: nowrap; /* Prevent wrapping */
    overflow-x: auto; /* Enable horizontal scrolling */
    white-space: nowrap; /* Ensure single line */
    padding-right: 10px;
}

.confirm-button {
    border-radius: 5px;
    margin-right: 20px;
    min-width: 60px;
    font-size: 14px;
}

.selected-friend {
    display: inline;
    align-items: center;
    margin-right: 10px;
}

.selected-friend image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
}

.friend-list {
    margin-top: 60px; /* Adjust this value based on the height of the fixed header */
}

.friend-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border-bottom: 1px solid #eee;
    font-size: 14px;
}

.friend-item checkbox {
    margin-right: 10px;
}

.friend-item image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
}