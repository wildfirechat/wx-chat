@import "../../modules/chat-page/word.wxss";
@import "../../modules/chat-page/notificaiton.wxss";
page {
    background-color: #EFEFEF;
    height: 100%;
}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
}

.modal-content {
    width: 80%;
    background-color: #fff;
    border-radius: 10px;
    overflow: hidden;
}

.modal-header {
    padding: 10px;
    font-size: 18px;
    font-weight: bold;
    text-align: center;
    border-bottom: 1px solid #eee;
}

.modal-body {
    max-height: 400px;
    overflow-y: auto;
}

.member-item {
    display: flex;
    align-items: center;
    padding: 10px;
    border-bottom: 1px solid #eee;
}

.avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
}

.new-message-tip {
    position: fixed;
    right: 20rpx;
    bottom: 120rpx;
    background-color: #fff;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.2);
    color: #3E65E4;
    font-size: 24rpx;
    z-index: 100;
}

#bottomElement {
    height: 10rpx;
}
