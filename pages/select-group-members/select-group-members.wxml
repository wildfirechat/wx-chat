<view class="container">
    <scroll-view class="member-list" scroll-y="true">
        <block wx:for="{{members}}" wx:key="userId">
            <view class="member-item" bindtap="toggleSelect" data-userid="{{item.userId}}">
                <checkbox wx:if="{{mode !== 'single'}}" checked="{{item.selected}}" class="checkbox"/>
                <image src="{{item.userHeadUrl}}" class="avatar"/>
                <text>{{item.userName}}</text>
            </view>
        </block>
    </scroll-view>
    <button wx:if="{{mode !== 'single'}}" bindtap="confirmSelection" class="confirm-button" disabled="{{isConfirmDisabled}}">确定</button>
</view>