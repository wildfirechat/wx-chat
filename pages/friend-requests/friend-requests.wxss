.container {
    padding: 10px;
    box-sizing: border-box;
}

.placeholder {
    text-align: center;
    color: #999;
    padding: 20px;
}

.request-item {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 10px 0;
    border-bottom: 1px solid #eee;
}

.request-item .name {
    flex: 1;
}

.request-item .desc {
    color: #999;
    font-size: 13px;
}

.avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
}

button {
    margin-left: 10px;
    font-size: 14px;
}